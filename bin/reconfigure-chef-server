#!/bin/bash
if [ -f /etc/ssl/private/chef-server.key ]; then
    echo Patching in SSL private key ...
    ln -sfv /etc/ssl/private/chef-server.key `ls /var/opt/opscode/nginx/ca/*.key`
fi
if [ -f /etc/ssl/private/chef-server.crt ]; then
    echo Patching in SSL certificate bundle ...
    ln -sfv /etc/ssl/private/chef-server.crt `ls /var/opt/opscode/nginx/ca/*.crt`
fi
echo Updating configuration of Chef Server ...
chef-server-ctl stop
chef-server-ctl reconfigure
chef-server-ctl start
